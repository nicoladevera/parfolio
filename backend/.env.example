# Server Configuration
# Development: PORT=8000, HOST=127.0.0.1
# Production: PORT=80, HOST=0.0.0.0
PORT=8000
HOST=127.0.0.1
DEBUG=True

# Frontend Configuration
# Development: http://localhost:8080
# Production: https://yourwebsite.com
FRONTEND_URL="http://localhost:8080"

# Firebase Configuration
# Path to Firebase service account JSON file
# Development: ./firebase-credentials.json
# Production (Azure): /home/yourusername/yourproject/backend/firebase-credentials.json
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Firebase Web API Key (from Firebase Console â†’ Project Settings)
FIREBASE_API_KEY="your_firebase_web_api_key"

# Firebase Storage Bucket (e.g., your-project.appspot.com)
# Used for storing audio files during long transcription
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"

# API Keys
# Google API Key for Gemini AI (get from https://aistudio.google.com/apikey)
# Note: Same credentials work for Speech-to-Text API
GOOGLE_API_KEY="your_google_api_key"

# Tavily API Key for market intelligence (get from https://tavily.com)
TAVILY_API_KEY="your_tavily_api_key"

# Google Cloud APIs Required (enable in Google Cloud Console):
# - Cloud Speech-to-Text API (for audio transcription)
# - Cloud Storage API (for long audio file uploads)

# Model Configuration (optional overrides)
# GEMINI_FLASH_MODEL=gemini-2.0-flash
# GEMINI_PRO_MODEL=gemini-2.0-pro-exp-02-05
